{%- assign id = '#shopify-section-' | append: section.id -%}

{% style %}
  {{id}} .marquee {
    position: relative;
    width: 100vw;
    max-width: 100%;
    height: auto;
    overflow: hidden;
  }

  {{id}} .track {
    display: flex;
    gap: 8rem;
    white-space: nowrap;
    animation: marquee {{ section.settings.scroll_speed }}s linear infinite;
  }

  {{id}} .marquee-content {
    display: flex;
    gap: 2rem;
  }

  {{id}} .track:hover {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstyle %}

<div 
  class="marquee" 
  style="
    margin-top: {{ section.settings.margin_top }}px; 
    margin-bottom: {{ section.settings.margin_bottom }}px;
  "
>
  <div class="track">
    <!-- Main Content Loop -->
    <div class="marquee-content" style="background-color: {{ section.settings.background_color }};
        padding-top: {{ section.settings.padding_top }}px; 
        padding-bottom: {{ section.settings.padding_bottom }}px;">
      {% for block in section.blocks %}
        <span 
          class="marquee-gap" 
          style="
            color: {{ block.settings.color }};
            font-size: {{ block.settings.text_size }}px;
          "
        >
          {{ block.settings.text }}
        </span>
      {% endfor %}
    </div>

    <!-- Duplicate for Seamless Scroll -->
    <div class="marquee-content" style="background-color: {{ section.settings.background_color }};
        padding-top: {{ section.settings.padding_top }}px; 
        padding-bottom: {{ section.settings.padding_bottom }}px;">
      {% for block in section.blocks %}
        <span 
          class="marquee-gap" 
          style="
            color: {{ block.settings.color }};
            font-size: {{ block.settings.text_size }}px;
          "
        >
          {{ block.settings.text }}
        </span>
      {% endfor %}
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed (Lower is Faster)",
      "default": 15,
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "default": 10,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "default": 10,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "ScrollingText",
      "name": "Scrolling Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Scrolling Text",
          "default": "Title"
        },
         {
          "type": "range",
          "id": "text_size",
          "label": "Text Size",
          "default": 16,
          "min": 12,
          "max": 100,
          "step": 2,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "color",
          "label": "Text Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Full Width"
    }
  ]
}
{% endschema %}


